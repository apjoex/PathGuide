<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pathguide.Add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Add new class"
                android:id="@+id/header_text"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place_name"
                android:hint="Enter name of place"
                android:layout_marginBottom="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter directions from the Engineering car park."
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/place_car_park"
                android:layout_marginBottom="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter directions from the Engineering Science link up bridge."
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/place_bridge"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPLOAD PICTURE"
                android:id="@+id/uploadBtn"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFF"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST"
                android:id="@+id/postBtn"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFF"
                android:layout_marginTop="10dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/passcode_body"
        android:background="#fff">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter passcode"
                android:id="@+id/passcode_label"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:id="@+id/passcode" />

        <Button
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:text="PROCEED"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/proceedBtn" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
